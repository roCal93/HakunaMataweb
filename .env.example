# Environment Variables Template
# Copy this to .env.local and fill in your actual values

# Email Configuration
# Option 1: Resend (recommandé pour production)
RESEND_API_KEY=re_votre_clé_ici
# Optionnel: utiliser un domaine personnalisé vérifié (sinon utilise onboarding@resend.dev)
# RESEND_FROM_EMAIL=Hakuna Mataweb <contact@hakunamataweb.fr>

# Option 2: Gmail (pour développement local)
CONTACT_EMAIL=your-email@gmail.com
CONTACT_EMAIL_PASS=your-app-specific-password

# Site URL (for production)
# NEXT_PUBLIC_SITE_URL=https://hakunamataweb.com

# For local development
NEXT_PUBLIC_SITE_URL=http://localhost:3000
